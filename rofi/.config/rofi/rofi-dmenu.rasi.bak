/**
 * ROFI Color theme
 * NAME: dt-dmenu.rasi
 * DESCRIPTION: This is a horizontal prompt similar to dmenu.
 * AUTHOR: Derek Taylor (DT)
 */

/*
* Minor changes made by NimbleClint.
* Do not edit this file directly. Instead,
* edit the WPGTK template.
*/

* {
    background-color:           #000008;
    border-color:               #454567;
    text-color:                 #ffffff;
    height:                     32px;
    font:                       "Ubuntu Mono 11";
    prompt-font:                "Ubuntu Mono 11";
    prompt-background:          #2296d7;
    prompt-foreground:          #000008;
    prompt-padding:             2px;
    selected-normal-background: #c92c78;
    selected-normal-foreground: #ffffff;
}
#window {
    anchor: south;
    location: south;
    width: 100%;
    padding: 0px;
    children: [ horibox ];
}
#horibox {
    orientation: horizontal;
    children: [ prompt, entry, listview ];
}
#prompt {
    padding:          @prompt-padding;
    background-color: @prompt-background;
    text-color:       @prompt-foreground;
    font:             @prompt-font;
    padding: 7px;
}
#listview {
    layout: horizontal;
    lines: 100;
}
#entry {
    padding: 7px;
    expand: false;
    width: 10em;
}
#element {
    padding: 7px 14px 7px 0px;
}
#element selected {
    background-color: @selected-normal-background;
    text-color:       @selected-normal-foreground;
}

