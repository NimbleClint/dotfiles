configuration {
    font:				"Deja Vu Sans 11";
    show-icons:		                true;
    icon-theme: 			"Papirus";
    display-drun: 			"ï€‚";
    drun-display-format:            	"{name}";
    disable-history:                	false;
    fullscreen:                     	false;
    hide-scrollbar: 			true;
    sidebar-mode: 			false;
}

@import "../../applets/styles/colors.rasi"

/* -- Assign colors from source rasi file -- */
* {
    background-alt:                 	@background-light;
    background-bar:                 	@background;
    foreground:                     	@color15;
}

window {
    transparency:                   	"real";
    background-color:               	@background;
    text-color:                     	@color15;
	border:			    	0px;
	border-color:		    	@border;
    border-radius:                  	4px;
	width:	                    	32%;
    location:                       	center;
    x-offset:                       	10px;
    y-offset:                       	50px;
}

prompt {
    enabled: 		            	true;
	padding: 		    	0.30% 0.5% 0% 0%;
	background-color: 		@background;
	text-color: 			@color15;
	font:				"FantasqueSansMono Nerd Font 10";
}

entry {
    background-color:               	@background;
    text-color:                     	@color7;
    placeholder-color:              	@foreground;
    expand:                         	true;
    horizontal-align:               	0;
    placeholder:                    	"Search Applications";
    padding:                        	-0.15% 0% 0% 0%;
    blink:                          	true;
}

inputbar {
    children:	 			[ prompt, entry ];
    background-color:               	@background;
    text-color:                     	@foreground;
    expand:                         	false;
    border:				0.1%;
    border-radius:                  	0px;
    border-color:			@background;
    margin:                         	0% 0% 0% 0%;
    padding:                        	0.50%;
}

listview {
    background-color:               	@background;
    columns:                        	5;
    lines:                          	3;
    spacing:                        	0%;
    cycle:                          	false;
    dynamic:                        	true;
    layout:                         	vertical;
}

mainbox {
    background-color:               	@background;
    border:				0% 0% 0% 0%;
    border-radius:                  	0% 0% 0% 0%;
    border-color:			@background;
    children:                       	[ inputbar, listview ];
    spacing:                       	1%;
    padding:                        	1.25% 0.65% 1.25% 0.65%;
}

element {
    background-color:               	@background;
    text-color:                     	@foreground;
    orientation:                    	vertical;
    border-radius:                  	0%;
    padding:                        	2% 0% 2% 0%;
}

element-icon {
    size:                           	64px;
    border:                         	0px;
}

element-text {
    expand:                         	true;
    horizontal-align:               	0.5;
    vertical-align:                 	0.5;
    margin:                         	0.5% 0.5% -0.5% 0.5%;
}

element selected {
    background-color:               	@background-alt;
    text-color:                     	@foreground;
    border:				0.1%;
    border-radius:                  	0px;
    border-color:                  	@background;
}
